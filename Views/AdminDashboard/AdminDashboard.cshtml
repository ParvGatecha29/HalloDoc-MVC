@{
    Layout = "_adminDash";
}

<ul class="nav nav-justified m-2 d-flex flex-wrap" id="dashboard_tab" role="tablist">
    <li class="nav-item m-2 col">
        <button class="nav-link new mb-0 active bg-primary-subtle text-primary border border-primary rounded" id="new-tab" data-bs-toggle="tab" data-bs-target="#new" type="button" role="tab" aria-controls="home" aria-selected="true">
